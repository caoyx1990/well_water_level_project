    <resultMap id="openidsMapper" type="com.tencent.wxcloudrun.model.Openid">
        <id property="id" column="id"/>
        <result property="createDate" column="create_date" javaType="java.time.LocalDateTime"/>
        <result property="openid" column="openid" />
    </resultMap>

    <select id="getOpenId" resultMap="openidsMapper" parameterType="java.lang.Integer">
        SELECT `id`, `create_date`, `openid`
        FROM Openids
        WHERE id = #{id}
    </select>

    <select id="getOpenIds" resultMap="openidsMapper">
        SELECT `id`, `create_date`, `openid`
        FROM Openids
    </select>

    <update id="insertOpenid" parameterType="com.tencent.wxcloudrun.model.Openid">
        INSERT INTO `Openids`(`id`, `openid`)
        VALUE(#{id}, #{openid})
        ON DUPLICATE KEY UPDATE openid=#{openid}
    </update>

</mapper>
